<!--Huaying Song-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.irissonghy.myfirstapplication.FavoritesActivity"
    android:id="@+id/RelativeLayoutFavorites"
    android:clickable="true"
    android:onClick="recipeOnClick">


    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/imageButtonFavorites"
        android:src="@android:drawable/btn_star_big_on"
        android:background="#00ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="36dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:text="Favorites"
        android:id="@+id/textViewFavorites"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="33dp"
        android:textSize="32dp"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/imageButtonFavorites"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/space" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FavoriteslistView"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:smoothScrollbar="false"
        android:layout_below="@+id/textViewFavDescription"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Below is a list of your favorite recipes."
        android:id="@+id/textViewFavDescription"
        android:layout_below="@+id/space"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:typeface="sans"
        android:paddingLeft="10dp"
        android:layout_marginBottom="15dp"
        android:textColor="#777"
        android:layout_alignTop="@+id/space" />

</RelativeLayout>
