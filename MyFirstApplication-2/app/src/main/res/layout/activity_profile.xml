<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.irissonghy.myfirstapplication.ProfileActivity"
    android:id="@+id/RelativeLayoutProfile"
    android:background="#462446">

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imageProfile"
        android:src="@drawable/profile_icon"
        android:layout_toLeftOf="@+id/textViewProfile" />
    <TextView
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:text="Profile"
        android:id="@+id/textViewProfile"
        android:layout_alignParentTop="true"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false"
        android:layout_alignWithParentIfMissing="false"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentEnd="false"
        android:textColor="#fff" />
    <Space
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/imageProfile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/space" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tell users about yourself and your cooking abilities!"
        android:id="@+id/textView"
        android:layout_below="@+id/space"
        android:layout_alignLeft="@+id/space"
        android:layout_alignStart="@+id/space"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#fff" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/camera_icon"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/usernameText"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/imageProfile"
        android:layout_toEndOf="@+id/imageProfile"
        android:textSize="21sp"
        android:textStyle="bold"
        android:text="Username"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:textColor="#fff"
        android:paddingLeft="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:layout_below="@+id/imageView2"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:text="About..."
        android:layout_marginTop="10dp"
        android:textColor="#fff" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/editText3"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:id="@+id/space2" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="User Posts:"
        android:id="@+id/textView3"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_below="@+id/space2"
        android:layout_alignLeft="@+id/space2"
        android:layout_alignStart="@+id/space2"
        android:layout_alignRight="@+id/textViewFavorites"
        android:textColor="#fff" />

    <!--<ScrollView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/scrollView"-->
        <!--android:layout_below="@+id/textView3"-->
        <!--android:layout_centerHorizontal="true" >-->


        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profileListViewItem"
            android:layout_below="@+id/textView3"
            android:background="#ff6c54" />
    <!--</ScrollView>-->


</RelativeLayout>
