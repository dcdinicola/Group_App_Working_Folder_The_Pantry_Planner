<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.irissonghy.myfirstapplication.MainActivity"
    android:id="@+id/RelativeLayoutMain">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:id="@+id/textViewUsername"
        android:textSize="18sp"
        android:typeface="sans"
        android:paddingLeft="10dp" />
    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imageMain"
        android:src="@drawable/home"
        android:layout_toLeftOf="@+id/textViewMain"
        android:layout_toStartOf="@+id/textViewMain"
        android:layout_below="@+id/textViewUsername" />
    <TextView
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:text="Main Page"
        android:id="@+id/textViewMain"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_alignWithParentIfMissing="false"
        android:gravity="center_vertical|center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textViewUsername" />
    <Space
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/imageMain"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/space" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start by placing ingredients into your pantry."
        android:id="@+id/textViewPantry"
        android:layout_below="@+id/space"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:paddingLeft="10dp"
        android:textColor="#555"
        android:textSize="18sp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:text="Select From Pantry"
        android:id="@+id/button3"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/textViewPantry" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:src="@drawable/downarrow"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingredients Preview"
        android:id="@+id/textView"
        android:layout_below="@+id/imageView"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/space2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other Specifications:"
        android:id="@+id/textView2"
        android:textSize="21sp"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:layout_toStartOf="@+id/textViewMain"
        android:layout_below="@+id/space2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textViewMain"
        android:layout_alignEnd="@+id/textViewMain" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cuisine Type:"
        android:id="@+id/textView3"
        android:textSize="20sp"
        android:textStyle="normal"
        android:paddingLeft="10dp"
        android:layout_toStartOf="@+id/textViewMain"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textViewMain"
        android:layout_alignEnd="@+id/textViewMain" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cooking Level:"
        android:id="@+id/textView4"
        android:textSize="20sp"
        android:textStyle="normal"
        android:paddingLeft="10dp"
        android:layout_toStartOf="@+id/textViewFavorites"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Look Up Recipe"
        android:id="@+id/button4"
        android:layout_centerHorizontal="true"
        android:onClick="lookUpRecipe"
        android:layout_below="@+id/textView4" />

    <Spinner
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:entries="@array/cuisine_type"
        android:layout_alignRight="@+id/space2"
        android:layout_alignEnd="@+id/space2"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignTop="@+id/textView3"
        android:layout_above="@+id/textView4" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/spinner"
        android:layout_alignStart="@+id/spinner"
        android:layout_above="@+id/button4"
        android:entries="@array/cooking_level"/>

</RelativeLayout>