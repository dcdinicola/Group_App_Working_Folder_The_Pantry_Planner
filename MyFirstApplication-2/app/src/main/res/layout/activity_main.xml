<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#f0f0f0"
    tools:context="com.irissonghy.myfirstapplication.MainActivity">

    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Select Ingredients From your Pantry"
        android:id="@+id/mainHeader"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333"
        android:layout_marginTop="30dp"
        android:gravity="center" />
    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:text="Go to my pantry"
        android:id="@+id/openPantryButton"
        android:textSize="21sp"
        android:textStyle="bold"
        android:background="#ff6c54"
        android:textColor="#FFF"
        android:onClick="goToPantryPopup"/>
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/downArrowImage"
        android:src="@drawable/downarrow"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="140dp"
        android:id="@+id/pantryItemList"
        android:background="#FFF"
        android:layout_marginTop="10dp"/>
    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Search For Recipe"
        android:id="@+id/searchRecipeButton"
        android:background="#ff6c54"
        android:textColor="#FFF"
        android:onClick="lookUpRecipe"
        android:layout_marginTop="40dp"
        android:textSize="18sp"
        android:textStyle="bold" />



</LinearLayout>