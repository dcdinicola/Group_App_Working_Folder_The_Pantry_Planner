<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.irissonghy.myfirstapplication.PantryPopupActivity"
    android:id="@+id/pantryPopupRelative"
    android:background="#462446">


    <TextView
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:text="This page allows you to update the ingredients in your pantry, update quantities of items in your pantry, and choose from those items in order to prepare a delicious meal."
        android:id="@+id/textView_ingredientsContentText"
        android:layout_gravity="right"
        android:textColor="#fff"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Item"
        android:layout_alignParentTop="true"
        android:id="@+id/buttonaddToPantry"
        android:layout_centerHorizontal="true"
        android:textSize="21sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="top"
        android:layout_marginTop="72dp"
        android:background="#ff6c54"
        android:textColor="#FFF" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select"
        android:id="@+id/button2"
        android:textSize="21sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFF"
        android:background="#ff6c54" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/button4"
        android:layout_alignTop="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:textSize="21sp"
        android:textStyle="bold"
        android:gravity="center|center_vertical|fill_vertical"
        android:textColor="#FFF"
        android:background="#ff6c54" />


    <ImageView
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_below="@+id/PantrylistView"
        android:id="@+id/imageView_recipeImage2"
        android:layout_gravity="left"
        android:background="#b2ff65"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:hint="Selected Items"
        android:id="@+id/ItemsforRecipe"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="5dp"
        android:layout_below="@+id/PantrylistView"
        android:layout_marginBottom="25dp" />
    <Space
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/buttonaddToPantry"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/space" />

<!--Currently unable to get list view to display white text-->
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:id="@+id/PantrylistView"
        android:textColor="#fff"
        android:layout_alignTop="@+id/space"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


