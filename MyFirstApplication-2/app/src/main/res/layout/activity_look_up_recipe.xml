<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background = "#462446"
    tools:context="com.irissonghy.myfirstapplication.LookUpRecipeActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="195dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src = "@drawable/recipe_icon"
                android:id="@+id/imageView_recipeIcon" />

            <TextView
                android:layout_marginLeft="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:text="Recipe"
                android:layout_weight="1.04"
                android:id="@+id/textView_recipeHeader"
                android:gravity="center_vertical"
                android:textColor="#fff"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor = "#f0f0f0"
            android:paddingTop="10px"
            android:layout_marginBottom="10px"
            android:text="These are what you can cook based on what you have in your pantry... "
            android:id="@+id/textView_recipeDescription"
            android:textSize="20sp"
            android:layout_marginLeft="10dp" />

        <ListView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/lv"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="10dp"
            android:clickable="true" />


    </LinearLayout>



</RelativeLayout>
