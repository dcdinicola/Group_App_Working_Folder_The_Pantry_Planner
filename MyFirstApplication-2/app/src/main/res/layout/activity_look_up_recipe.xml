<!--Sikang Li-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/RelativeLayoutLookUp"
    android:background="#fff"
    android:clickable="true">


    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:text="RECIPE RESULTS"
        android:id="@+id/textView_recipeHeader"
        android:background="#bdbdbd"
        android:gravity="center"
        android:textColor="#fff"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingLeft="25dp" />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src = "@drawable/recipelookup"
        android:id="@+id/imageView_recipeIcon"
        android:layout_marginRight="-110dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/textView_recipeHeader" />


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/textView_recipeHeader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:text="Cheddar Pudding"
                        android:textColor="#fff"
                        android:textAlignment="center"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/result1"
                        android:id="@+id/recipeIcon1"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:onClick="openDetail"
                        android:gravity="center"
                        android:layout_gravity="center" />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:text="Cheese Crackers"
                        android:textColor="#fff"
                        android:textAlignment="center"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/result2"
                        android:id="@+id/recipeIcon2"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:onClick="openDetail"
                        android:gravity="center"
                        android:layout_gravity="center" />
                </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="Veggie Soup"
            android:textColor="#fff"
            android:textAlignment="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/result3"
            android:id="@+id/recipeIcon3"
            android:textSize="21sp"
            android:textStyle="bold"
            android:clickable="true"
            android:onClick="openDetail"
            android:gravity="center"
            android:layout_gravity="center" />
        <TextView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="Baked Potato"
            android:textColor="#fff"
            android:textAlignment="center"
            android:layout_marginLeft="12dp"
            android:background="@drawable/result4"
            android:id="@+id/recipeIcon4"
            android:textSize="21sp"
            android:textStyle="bold"
            android:clickable="true"
            android:onClick="openDetail"
            android:gravity="center"
            android:layout_gravity="center" />
    </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="Thai Rice"
                android:textColor="#fff"
                android:textAlignment="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/result5"
                android:id="@+id/recipeIcon5"
                android:textSize="21sp"
                android:textStyle="bold"
                android:clickable="true"
                android:onClick="openDetail"
                android:gravity="center"
                android:layout_gravity="center" />
            <TextView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="Roasted Chicken"
                android:textColor="#fff"
                android:textAlignment="center"
                android:layout_marginLeft="12dp"
                android:background="@drawable/result6"
                android:id="@+id/recipeIcon6"
                android:textSize="21sp"
                android:textStyle="bold"
                android:clickable="true"
                android:onClick="openDetail"
                android:gravity="center"
                android:layout_gravity="center" />
        </LinearLayout>
</LinearLayout>
</ScrollView>
</RelativeLayout>
</RelativeLayout>