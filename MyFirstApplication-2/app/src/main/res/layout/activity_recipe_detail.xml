<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.irissonghy.myfirstapplication.RecipeDetailActivity">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:weightSum="1">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src = "@drawable/recipe_detail_icon"
                    android:id="@+id/imageView_recipeDetailIcon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="Recipe Detail"
                    android:id="@+id/textView_recipeDetail"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textColor="#000"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is the detail of the recipe... "
                android:id="@+id/textView_recipeDetailDescription"
                android:textSize="20sp"
                android:layout_marginLeft="10dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/imageView_recipeImage2"
                    android:layout_gravity="left"
                    android:src = "@drawable/chicken_soup_picture" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chicken Soup"
                        android:id="@+id/textView_recipeName_2"
                        android:layout_marginLeft="20dp"
                        android:textSize="21sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tommy"
                        android:id="@+id/recipePoster_1"
                        android:layout_marginLeft="20dp"
                        android:textSize="18sp"
                        android:onClick = "userNameOnClick"/>
                    <RatingBar
                        android:layout_width="197dp"
                        android:layout_height="50dp"
                        android:id="@+id/recipeRating_chickenSoup"
                        android:layout_marginLeft="10dp"
                        android:numStars="4"

                        android:rating="0.0" />
                    <!--
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" >
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Favorite"
                            android:id="@+id/button_addToFavorites"
                            android:layout_marginLeft="10dp"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Like"
                            android:id="@+id/button_likeButton2"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp" />
                        </LinearLayout>
                        -->
                    </LinearLayout>
                </LinearLayout>
                <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ingredients"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/textView_ingredientsText"
                            android:layout_marginTop="20dp"
                            android:textStyle="bold"
                            android:textSize="21sp" />
                <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Admiration instrument in. Shy saw declared age debating ecstatic man. Call in so want pure rank am dear were. "
                            android:id="@+id/textView_ingredientsContentText"
                            android:layout_gravity="right"
                            android:paddingLeft="10dp"
                            android:layout_marginTop="2dp"
                            android:textSize = "18sp" />
                <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Directions"
                            android:id="@+id/textView_directionsText"
                            android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                            android:textStyle="bold"
                            android:textSize="21sp" />
                <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Declared age debating ecstatic man. Call in so want pure rank am dear were. "
                            android:id="@+id/textView_directionsContentText"
                            android:layout_gravity="right"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_marginTop="2dp"
                            android:textSize = "18sp"/>
                <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reviews"
                            android:id="@+id/textView_reviewsText"
                            android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                            android:textSize="21sp" />
                <EditText
                            android:layout_height="300dp"
                            android:layout_width = "match_parent"
                            android:background="#fffcffd8" />
        </LinearLayout>

</RelativeLayout>