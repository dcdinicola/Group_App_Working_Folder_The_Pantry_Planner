<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.irissonghy.myfirstapplication.RecipeDetailActivity">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:weightSum="1">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recipe Detail"
                    android:id="@+id/textView_recipeDetail"
                    android:layout_gravity="left"
                    android:textSize="18pt"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/imageView_recipeImage2"
                    android:layout_gravity="left"

                    android:background="#b2ff65"
                    android:layout_marginLeft="10dp" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chicken Soup"
                        android:id="@+id/textView_recipeName_2"
                        android:layout_marginLeft="20dp"
                        android:textSize="11pt"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tommy"
                        android:id="@+id/textView_recipePoster_2"
                        android:layout_marginLeft="20dp"
                        android:textStyle="italic"
                        android:textSize="8pt" />
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ratingBar_recipeRating_2"
                        android:numStars="3"
                        android:rating="3"
                        android:layout_marginLeft="10dp" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Favorite"
                            android:id="@+id/button_addToFavorites"
                            android:layout_marginLeft="10dp"
                            android:onClick="addToFavoritesOnClick" />
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Like"
                            android:id="@+id/button_likeButton2"
                            android:onClick="likeButtonOnClick" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingredients"
                    android:id="@+id/textView_ingredientsText"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="11pt" />
                <TextView
                    android:layout_width="348dp"
                    android:layout_height="wrap_content"
                    android:text="Admiration instrument up do of prosperous in. Shy saw declared age debating ecstatic man. Call in so want pure rank am dear were. "
                    android:id="@+id/textView_ingredientsContentText"
                    android:layout_gravity="right"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:layout_marginTop="2dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Directions"
                    android:id="@+id/textView_directionsText"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="11pt" />
                <TextView
                    android:layout_width="348dp"
                    android:layout_height="wrap_content"
                    android:text="Declared age debating ecstatic man. Call in so want pure rank am dear were. "
                    android:id="@+id/textView_directionsContentText"
                    android:layout_gravity="right"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:layout_marginTop="2dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reviews"
                    android:id="@+id/textView_reviewsText"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="11pt" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Write A Review"
                    android:id="@+id/button_reviewsButton"
                    android:layout_gravity="center_horizontal"
                    android:onClick="writeReviewOnClick" />
            </LinearLayout>
        </LinearLayout>





</RelativeLayout>
