<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/LinearLayoutLookUp"
    android:background="#fff"
    android:weightSum="1">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollViewRecDetail">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutScroll">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:id="@+id/recipeImage"
                    android:src = "@drawable/food_banner"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop = "5dp"
                android:layout_marginLeft="15dp"
                android:weightSum="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Fish and Chips"
                    android:textColor="#555"
                    android:id="@+id/recipeName"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/recipeStar"
                    android:layout_marginLeft="10dp"
                    android:numStars="1"
                    android:rating="0.0" />

            </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop = "3dp"
            android:layout_marginLeft="15dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/recipePosterAvatar"
                android:src = "@drawable/avatar_tommy"
                android:layout_marginTop="3dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tommy"
                android:id="@+id/recipePoster"
                android:textColor="#555"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                android:textSize="16sp"
                android:onClick = "userNameOnClick"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INGREDIENTS"
            android:id="@+id/recipeIngredients"
            android:layout_weight="0.14"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textColor="#555" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:text=""
            android:id = "@+id/ingredientsTextArea"
            android:background="#f0f0f0"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:autoText="true"
            android:textSize="13sp"
            android:textColor="#555"
            android:padding="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DIRECTIONS"
            android:id="@+id/recipeDirections"
            android:layout_weight="0.14"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textColor="#555" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do.Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do."
            android:id = "@+id/directionsTextArea"
            android:background="#f0f0f0"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:textSize="13sp"
            android:textColor="#555"
            android:padding="5dp" />


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop = "5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:weightSum="1">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop = "5dp"
                    android:weightSum="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="REVIEW"
                    android:id="@+id/recipeReview"
                    android:textSize="16sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="140dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#555" />
                <Button
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:text="Post a review"
                    android:id="@+id/reviewButton"
                    android:onClick="showDialog"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:background="@drawable/btnlogin"
                    android:textColor="#fff" />
                    </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Great Recipe! I love this recipe a lot because every time there are guests in my house I cook them this dish, and they love it! It is also favored by kids!"
                    android:id="@+id/recipeReview1"
                    android:background="#f0f0f0"
                    android:layout_weight="0.14"
                    android:textSize="13sp"
                    android:textColor="#555"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:padding="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Very Useful! I love this recipe a lot because every time there are guests in my house I cook them this dish, and they love it! It is also favored by kids!"
                    android:id="@+id/recipeReview2"
                    android:background="#f0f0f0"
                    android:layout_weight="0.14"
                    android:textSize="13sp"
                    android:textColor="#555"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id = "@+id/reviewTextArea"
                    android:background="#fff"
                    android:textSize="13sp"
                    android:textColor="#555"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:padding="5dp"/>

            </LinearLayout>

    </LinearLayout>
</ScrollView>


</LinearLayout>