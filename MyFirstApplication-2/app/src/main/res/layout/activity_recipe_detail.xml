<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/LinearLayoutLookUp"
    android:background="#f0f0f0"
    android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:id="@+id/recipeImage"
                android:src = "@drawable/food_banner"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop = "5dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Fish and Chips"
                android:textColor="#333"
                android:id="@+id/recipeName"
                android:textSize="23sp"
                android:textStyle="bold" />
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/recipeStar"
                android:layout_marginLeft="10dp"
                android:numStars="1"
                android:rating="0.0" />
        </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop = "5dp"
        android:layout_marginLeft="10dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/recipePosterAvatar"
            android:src = "@drawable/avatar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tommy"
            android:id="@+id/recipePoster"
            android:textColor="#333"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:textSize="18sp"
            android:onClick = "userNameOnClick"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingredients"
        android:id="@+id/recipeIngredients"
        android:layout_weight="0.14"
        android:textSize="25sp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Directions"
        android:id="@+id/recipeDirections"
        android:layout_weight="0.14"
        android:textSize="20sp"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop = "5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop = "20dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id = "@+id/reviewTextArea"
                    android:background="#fff"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Post a review"
                    android:id="@+id/reviewButton"
                    android:layout_marginTop="10dp"
                    android:onClick="showDialog" />
            </LinearLayout>
        </ScrollView>


    </LinearLayout>




</LinearLayout>