<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.irissonghy.myfirstapplication.AddRecipeActivity"
    android:id="@+id/RelativeLayoutAddRecipe"
    android:background="#f0f0f0">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:text="    Add Recipe"
        android:id="@+id/textViewAddRecipe"
        android:layout_alignParentTop="true"
        android:textSize="21sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false"
        android:layout_alignWithParentIfMissing="false"
        android:gravity="center"
        android:layout_alignParentEnd="false"
        android:textColor="#333"
        android:background="#dfdfdf" />
    <ImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:id="@+id/imageAddRecipe"
    android:src="@drawable/addrecipelogo"
    android:layout_toLeftOf="@+id/textViewAddRecipe"
    android:layout_marginRight="-130dp"
        android:layout_marginTop="5dp" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/imageAddRecipe"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/space" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here you can input information about your recipe."
        android:id="@+id/recipeIngredients"
        android:textSize="18sp"
        android:paddingLeft="15dp"
        android:textColor="#777"
        android:layout_below="@+id/textViewAddRecipe"
        android:layout_marginTop="15dp"
        android:paddingRight="15dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageView2"
        android:src="@drawable/add_recipe"
        android:layout_below="@+id/recipeIngredients"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentStart="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recipeName"
        android:layout_toEndOf="@+id/imageView2"
        android:textSize="21sp"
        android:textStyle="bold"
        android:text="Recipe Name"
        android:textColor="#555"
        android:layout_below="@+id/recipeIngredients"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Difficulty:"
        android:id="@+id/textView2"
        android:textSize="18sp"
        android:layout_below="@+id/recipeName"
        android:layout_alignLeft="@+id/recipeName"
        android:layout_alignStart="@+id/recipeName"
        android:layout_marginTop="20dp"
        android:textColor="#fff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingredients"
        android:id="@+id/textView3"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#555"
        android:layout_below="@+id/imageView2"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/recipeDetailIngredients"
        android:layout_below="@+id/textView3"
        android:textSize="18sp"
        android:textColor="#fff"
        android:layout_alignRight="@+id/recipeIngredients"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/recipeDetailIngredients"
        android:layout_alignLeft="@+id/recipeDetailDirections"
        android:layout_alignStart="@+id/recipeDetailDirections"
        android:id="@+id/space4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Directions "
        android:id="@+id/textView5"
        android:layout_below="@+id/space4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#555" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/recipeDetailDirections"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:textColor="#fff"
        android:layout_alignRight="@+id/recipeDetailIngredients"
        android:layout_alignEnd="@+id/recipeDetailIngredients" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/showRecipeDetail"
        android:background="@drawable/btnlogin"
        android:layout_below="@+id/recipeDetailDirections"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:onClick="showRecipeDetail"/>



</RelativeLayout>