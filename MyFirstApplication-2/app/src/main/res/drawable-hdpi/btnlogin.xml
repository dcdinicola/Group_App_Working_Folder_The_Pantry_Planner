<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#ffc153"/>
            <corners
                android:radius="40dp" />

        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid
                android:color="#ffc153"/>
            <corners
                android:radius="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#ff6c54"/>
            <corners
                android:radius="10dp" />
        </shape>
    </item>
</selector>